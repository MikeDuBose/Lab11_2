
@{
    ViewData["Title"] = "Index";
}
@model IceCreamShop.Models.UserModel
<link rel="stylesheet" href="~/css/form.css">
<h1>Registration Form</h1>
<p>Let's get started with your registration!</p>

<form asp-controller="Order" asp-action="Order" method="post">
    @Html.LabelFor(m => m.FirstName): <input asp-for="FirstName" /><br />

    @Html.LabelFor(m => m.LastName): <input asp-for="LastName" /> <br />

    @Html.LabelFor(m => m.Email): <input asp-for="Email" /><br />

    @Html.LabelFor(m => m.PhoneNum): <input asp-for="PhoneNum" /><br />

    @Html.LabelFor(m => m.Age): <input asp-for="Age" /><br />

    @Html.LabelFor(m => m.Options):
    <select asp-for="Options">
        @{
            <option>No restrictions</option>
            <option>Gluten Free</option>
            <option>Vegan</option>
            <option>Vegetarian</option>
        }
    </select>
    <br />
    @Html.LabelFor(m => m.Password): <input asp-for="Password" /><br />
    @*<label for="fname">First Name:</label> <input type="text" name="fname" maxlength="20" /><br />
        <label for="lname">Last Name</label><input type="text" name="lname" maxlength="20" /><br />
        <label for="email">E-mail:</label><input type="text" name="email" /><br />
        <label for="age">Age</label><input type="text" name="age" maxlength="20" /><br />
        <label for="password">Password:</label><input type="text" name="password" maxlength="20" /><br />*@

    <button input type="submit" value="Order Now" class="button" style="vertical-align:middle"><span>Submit   </span></button>

</form>


