
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/form.css">
<h1>Registration Form</h1>
<p>Let's get started with your registration!</p>

<form action="/Order/Order" method="post">
    <label for="fname">First Name:</label> <input type="text" name="fname" maxlength="20" /><br />
    <label for="lname">Last Name</label><input type="text" name="lname" maxlength="20" /><br />
    <label for="email">E-mail:</label><input type="text" name="email" /><br />
    <label for="flavor">Password:</label><input type="text" name="password" maxlength="20" /><br />

    <button input type="submit" value="Order Now" class="button" style="vertical-align:middle"><span>Submit   </span></button>

</form>


